<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MovieDetail">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/img_slideshow_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.daimajia.slider.library.SliderLayout
                    xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:background="@color/blue"
                    android:layout_height="280dp"
                    custom:pager_animation="Fade"
                    custom:auto_cycle="true"
                    custom:indicator_visibility="invisible"
                    custom:pager_animation_span="1100"/>

                <ImageView
                    android:id="@+id/back"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="16dp"/>

                <ImageView
                    android:id="@+id/slideshow"
                    android:scaleType="center"
                    android:src="@drawable/ic_camera_white_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="16dp"/>

                <Utilities.Triangle
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignBottom="@+id/cover"
                    android:id="@+id/view" />
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="10dp"
                    app:fabSize="normal"
                    app:rippleColor="#CCC"
                    android:src="@drawable/ic_add_white_24dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:layout_alignBottom="@+id/cover"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    android:id="@+id/fab" />

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/poster_card"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp"
                    android:layout_alignTop="@+id/view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    card_view:elevation="20dp"
                    card_view:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/poster"
                        android:src="@drawable/finding_dory"
                        android:scaleType="fitXY"
                        android:layout_width="120dp"
                        android:layout_height="170dp"/>
                </android.support.v7.widget.CardView>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/rating"
                    android:numStars="5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:isIndicator="true"
                    android:focusable="false"
                    android:rating="4.5"
                    android:clickable="false"
                    android:layout_below="@+id/movie_name"
                    android:layout_alignRight="@+id/movie_name"
                    android:layout_alignEnd="@+id/movie_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventure | Action | Comedy | Something | Something"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:id="@+id/genre"
                    android:textColor="#555"
                    android:textSize="12sp"
                    android:gravity="end|bottom"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="textEnd"
                    android:layout_below="@+id/rating"
                    android:layout_alignRight="@+id/rating"
                    android:layout_alignEnd="@+id/rating"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/poster_card"
                    android:layout_toRightOf="@+id/poster_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get started with Firebase"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:id="@+id/tagline"
                    android:textColor="#003e4b"
                    android:textSize="12sp"
                    android:textStyle="bold|italic"
                    android:gravity="end|bottom"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="center"
                    android:layout_below="@+id/poster_card"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/q_start"
                    android:src="@drawable/quotation_start"
                    android:layout_alignTop="@+id/tagline"
                    android:layout_toLeftOf="@+id/tagline"
                    android:layout_toStartOf="@+id/tagline" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/q_end"
                    android:src="@drawable/quotation_end"
                    android:layout_alignTop="@+id/tagline"
                    android:layout_toRightOf="@+id/tagline"
                    android:layout_toEndOf="@+id/tagline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:50 min"
                    android:textStyle="normal|italic"
                    android:textSize="12sp"
                    android:textColor="#777"
                    android:id="@+id/duration"
                    android:layout_below="@+id/genre"
                    android:layout_alignRight="@+id/genre"
                    android:layout_alignEnd="@+id/genre"
                    android:typeface="monospace"
                    android:fontFamily="sans-serif-condensed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="12-12-1995"
                    android:textStyle="normal|italic"
                    android:textSize="12sp"
                    android:textColor="#777"
                    android:id="@+id/release"
                    android:fontFamily="sans-serif-condensed"
                    android:typeface="monospace"
                    android:layout_below="@+id/genre"
                    android:layout_toLeftOf="@+id/duration"
                    android:layout_toStartOf="@+id/duration" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/movie_name"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="end|bottom"
                    android:text="The Shawshank Redumption"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="textEnd"
                    android:layout_alignTop="@+id/view"
                    android:layout_alignRight="@+id/fab"
                    android:layout_alignEnd="@+id/fab"
                    android:layout_marginTop="64dp"
                    android:layout_toRightOf="@+id/poster_card"
                    android:layout_toEndOf="@+id/poster_card" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:layout_marginTop="32dp"
                android:background="#f5b9a6"/>
            <com.ms.square.android.expandabletextview.ExpandableTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:maxCollapsedLines="4"
                expandableTextView:animDuration="200">
                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="#777"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@android:color/transparent"/>
            </com.ms.square.android.expandabletextview.ExpandableTextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="#f5b9a6"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:id="@+id/video_frames">
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Castings"
                    android:textColor="#284569"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:id="@+id/casts"
                    android:background="@color/white"
                    android:scrollbarSize="3dp">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seasons"
                    android:textColor="#284569"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:id="@+id/seasons"
                    android:background="@color/white"
                    android:scrollbarSize="3dp">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Similar Shows"
                    android:textColor="#284569"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:id="@+id/similar_movies"
                    android:background="@color/white"
                    android:scrollbarSize="3dp">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommendations"
                    android:textColor="#284569"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:id="@+id/recommendations"
                    android:background="@color/white"
                    android:scrollbarSize="3dp">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>