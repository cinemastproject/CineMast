<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dev.infinity.yellow.person.Profile">
    <RelativeLayout
        android:orientation="vertical"
        android:background="#FFF"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:scaleType="fitXY"
            android:id="@+id/cover" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:scaleType="fitXY"
            android:id="@+id/cover_gray"
            android:background="#aa011523"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_below="@+id/back"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/also_known_as"
            android:layout_below="@+id/name"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal"
            android:textColor="#EEE"
            android:textSize="14sp"
            android:gravity="left|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/also_known_as"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@drawable/ellipse"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>

        <com.dev.infinity.yellow.utils.Triangle
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/cover"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:id="@+id/birthday"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textColor="#555"
            android:layout_below="@+id/view"
            android:layout_toRightOf="@+id/person_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:id="@+id/birth_country"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#555"
            android:layout_below="@+id/birthday"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/person_image"
            android:layout_toEndOf="@+id/person_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/person_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#bdbdbd"
            android:layout_alignTop="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.ms.square.android.expandabletextview.ExpandableTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/biography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_image"
            expandableTextView:maxCollapsedLines="4"
            expandableTextView:animDuration="200">
            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="#777"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@android:color/transparent"/>
        </com.ms.square.android.expandabletextview.ExpandableTextView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/person_gallery"
            android:padding="8dp"
            android:layout_below="@+id/biography">
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/casted_in"
            android:padding="8dp"
            android:layout_below="@+id/person_gallery">
        </FrameLayout>
    </RelativeLayout>
</ScrollView>